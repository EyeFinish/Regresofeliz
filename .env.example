# Variables de entorno para WhatsApp Business API
# IMPORTANTE: NO SUBIR ESTE ARCHIVO A GIT

# Token de acceso de WhatsApp Business API
# Obtenerlo en: https://developers.facebook.com/apps/ > Tu App > WhatsApp > Configuración
WHATSAPP_ACCESS_TOKEN=tu_access_token_aqui

# ID del número de teléfono de WhatsApp Business
# Encontrarlo en: WhatsApp Business Account > Números de teléfono
WHATSAPP_PHONE_NUMBER_ID=tu_phone_number_id_aqui

# ID de la cuenta de WhatsApp Business
WHATSAPP_BUSINESS_ACCOUNT_ID=tu_business_account_id_aqui

# Token de verificación del webhook (puedes elegir cualquier string seguro)
WEBHOOK_VERIFY_TOKEN=tu_token_de_verificacion_secreto_123

# Puerto del servidor
PORT=3000

# Número de teléfono del negocio (formato internacional sin +)
BUSINESS_PHONE=56926974449
